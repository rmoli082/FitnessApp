<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/bodyfat_calc"
        android:textSize="32sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sex_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/sex_header" />

        <RadioGroup
            android:id="@+id/sex_button_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sex_header"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/sex_button_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/male" />

            <RadioButton
                android:id="@+id/sex_button_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/female" />

        </RadioGroup>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bodyfat_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/bodyfat_height_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/height"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"/>

        <EditText
            android:id="@+id/bodyfat_height_entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/bodyfat_height_header"
            android:layout_marginTop="8dp"
            android:layout_alignBaseline="@id/bodyfat_height_header"
            android:hint="@string/hint"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/bodyfat_weight_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bodyfat_height_header"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:text="@string/weight" />

        <EditText
            android:id="@+id/bodyfat_weight_entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bodyfat_height_header"
            android:layout_toEndOf="@id/bodyfat_weight_header"
            android:layout_marginTop="8dp"
            android:layout_alignBaseline="@id/bodyfat_weight_header"
            android:hint="@string/hint_pounds"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/bodyfat_waist_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bodyfat_weight_header"
            android:text="@string/waist_male"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"/>

        <EditText
            android:id="@+id/bodyfat_waist_entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bodyfat_weight_entry"
            android:layout_toEndOf="@id/bodyfat_waist_header"
            android:layout_marginTop="8dp"
            android:layout_alignBaseline="@id/bodyfat_waist_header"
            android:hint="@string/hint"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/bodyfat_neck_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bodyfat_waist_header"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:text="@string/neck" />

        <EditText
            android:id="@+id/bodyfat_neck_entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bodyfat_waist_entry"
            android:layout_toEndOf="@id/bodyfat_neck_header"
            android:layout_marginTop="8dp"
            android:layout_alignBaseline="@id/bodyfat_neck_header"
            android:hint="@string/hint"
            android:inputType="numberDecimal" />

        <RelativeLayout
            android:id="@+id/bodyfat_female_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bodyfat_neck_header"
            android:visibility="gone">

            <TextView
                android:id="@+id/bodyfat_hips_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:text="@string/hips" />

            <EditText
                android:id="@+id/bodyfat_hips_entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/bodyfat_hips_header"
                android:layout_marginTop="8dp"
                android:layout_alignBaseline="@id/bodyfat_hips_header"
                android:hint="@string/hint"
                android:inputType="numberDecimal" />

        </RelativeLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/calculate_bodyfat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/calculate" />

    <RelativeLayout
        android:id="@+id/bodyfat_results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible">

        <TextView
            android:id="@+id/bodyfat_percent_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:text="@string/bodyfat_percent" />

        <TextView
            android:id="@+id/bodyfat_percent_results"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@id/bodyfat_percent_header" />

        <TextView
            android:id="@+id/bodyfat_fat_mass_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_below="@id/bodyfat_percent_header"
            android:text="@string/fat_mass" />

        <TextView
            android:id="@+id/bodyfat_fat_mass_results"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_below="@id/bodyfat_percent_header"
            android:layout_toEndOf="@id/bodyfat_lean_mass_header" />

        <TextView
            android:id="@+id/bodyfat_lean_mass_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_below="@id/bodyfat_fat_mass_header"
            android:text="@string/lean_mass" />

        <TextView
            android:id="@+id/bodyfat_lean_mass_results"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_below="@id/bodyfat_fat_mass_header"
            android:layout_toEndOf="@id/bodyfat_fat_mass_header"/>


    </RelativeLayout>

</LinearLayout>