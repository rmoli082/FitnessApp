<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddMeasurementActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/TitleText"
            android:text="@string/add_measurement"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/HeaderText"
                android:text="@string/add_neck" />

            <EditText
                android:id="@+id/add_neck"
                style="@style/EntryText"
                android:inputType="numberDecimal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/HeaderText"
                android:text="@string/add_chest" />

            <EditText
                android:id="@+id/add_chest"
                style="@style/EntryText"
                android:inputType="numberDecimal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/HeaderText"
                android:text="@string/add_waist" />

            <EditText
                android:id="@+id/add_waist"
                style="@style/EntryText"
                android:inputType="numberDecimal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/HeaderText"
                android:text="@string/add_hips" />

            <EditText
                android:id="@+id/add_hips"
                style="@style/EntryText"
                android:inputType="numberDecimal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/HeaderText"
                android:text="@string/add_rBicep" />

            <EditText
                android:id="@+id/add_rBicep"
                style="@style/EntryText"
                android:inputType="numberDecimal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/HeaderText"
                android:text="@string/add_rForearm" />

            <EditText
                android:id="@+id/add_rForearm"
                style="@style/EntryText"
                android:inputType="numberDecimal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/HeaderText"
                android:text="@string/add_lBicep" />

            <EditText
                android:id="@+id/add_lBicep"
                style="@style/EntryText"
                android:inputType="numberDecimal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/HeaderText"
                android:text="@string/add_lForearm" />

            <EditText
                android:id="@+id/add_lForearm"
                style="@style/EntryText"
                android:inputType="numberDecimal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/HeaderText"
                android:text="@string/add_rThigh" />

            <EditText
                android:id="@+id/add_rThigh"
                style="@style/EntryText"
                android:inputType="numberDecimal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/HeaderText"
                android:text="@string/add_rCalf" />

            <EditText
                android:id="@+id/add_rCalf"
                style="@style/EntryText"
                android:inputType="numberDecimal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/HeaderText"
                android:text="@string/add_lThigh" />

            <EditText
                android:id="@+id/add_lThigh"
                style="@style/EntryText"
                android:inputType="numberDecimal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/HeaderText"
                android:text="@string/add_lCalf" />

            <EditText
                android:id="@+id/add_lCalf"
                style="@style/EntryText"
                android:inputType="numberDecimal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/HeaderText"
                android:text="@string/weight" />

            <EditText
                android:id="@+id/add_weight"
                style="@style/EntryText"
                android:inputType="numberDecimal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/HeaderText"
                android:text="@string/bodyfat_percent" />

            <EditText
                android:id="@+id/add_bodyfat"
                style="@style/EntryText"
                android:inputType="numberDecimal"/>

        </LinearLayout>

        <Button
            android:id="@+id/save_measurement_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/save_button"/>

    </LinearLayout>

</ScrollView>